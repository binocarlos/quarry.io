<!-- bring in socket.io -->
<script src="<%- protocol %><%- hostname %>/socket.io/socket.io.js"></script>

<!-- bring in quarry browser core -->
<script src="<%- protocol %><%- hostname %><%- route %>/core.js"></script>

<!-- bootstrap -->
<script>
  var socket = io.connect('<%- protocol %><%- hostname %>/<%- socketid %>');

  socket.on('connect', function () { // TIP: you can avoid listening on `connect` and listen on events directly too!
    socket.emit('ferret', 'tobi', function (data) {
      console.log(data); // data will be 'woot'
    });
  });
</script>